  </head>
  <body>
    <div class="login-container">
      <div class="login-card">
        <div class="login-header">
          <h1>
            Welcome Back
          </h1>
          <p>
            Employee Management System
          </p>
        </div>

        @if(flashMessages.has('success'))
          <div class="alert alert-success" role="alert">
            <span>{{ flashMessages.get('success') }}</span>
          </div>
        @end
        
        @if(flashMessages.has('error'))
          <div class="alert alert-error" role="alert">
            <span>{{ flashMessages.get('error') }}</span>
          </div>
        @end
        
        @if(flashMessages.has('errors'))
          <div class="alert alert-error" role="alert">
            <ul>
              @each(error in flashMessages.get('errors'))
                <li>
                  {{ error.message }}
                </li>
              @end
            </ul>
          </div>
        @end
        
        <form action="{{ route('auth.login.store') }}" method="POST">
          {{ csrfField() }}
          <div class="form-group">
            <label for="email">Email</label>
            <input id="email" name="email" type="email" required placeholder="you@example.com" />
          </div>

          <div class="form-group">
            <label for="password">Password</label>
            <input id="password" name="password" type="password" required placeholder="Enter your password" />
          </div>

          <button type="submit" class="submit-btn">Sign In</button>

          <div class="form-footer">
            <p>
              Don't have an account? <a href="{{ route('auth.register') }}" class="register-link">Sign up</a>
            </p>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
