  <body>
    <nav>
      <div class="container">
        <a href="/dashboard" class="logo">Sistem Karyawan</a>
        <div class="nav-links">
          <a href="/dashboard">Dashboard</a>
          <a href="/employees">Karyawan</a>
          <a href="/absensi/history">History Absensi</a>
          <a href="/holidays" class="active">Hari Libur</a>
          <a href="/employees/create">Tambah Karyawan</a>
        </div>
        <div class="user-section">
          <span class="badge">Admin</span>
          <form method="POST" action="/auth/logout" style="display: inline;">
            {{ csrfField() }}
            <button type="submit" class="logout-btn">Keluar</button>
          </form>
        </div>
      </div>
    </nav>

    <div class="main-container">
      <div class="page-header">
        <h1>
          {{ action === 'create' ? 'Tambah' : 'Edit' }} Hari Libur
        </h1>
        <p>
          {{ action === 'create' ? 'Tambahkan hari libur baru ke dalam sistem' : 'Perbarui informasi hari libur' }}
        </p>
      </div>

      @if(error)
        <div class="alert alert-error">
          {{ error }}
        </div>
      @end
      
      @if(errors)
        <div class="alert alert-error">
          <ul style="margin-left: 20px;">
            @each(err in errors)
              <li>
                {{ err.message }}
              </li>
            @end
          </ul>
        </div>
      @end
      
      <div class="card">
        <form method="POST" action="{{ action === 'create' ? '/holidays' : '/holidays/' + holiday._id }}">
          {{ csrfField() }}
          @if(action === 'edit')
            <input type="hidden" name="_method" value="PUT" />
          @end
          
          <div class="form-group">
            <label>
              Nama Hari Libur<span class="required">*</span>
            </label>
            <input
              type="text"
              name="name"
              value="{{ holiday ? holiday.name : '' }}"
              required
              placeholder="Contoh: Tahun Baru Imlek"
            />
            <div class="help-text">
              Nama hari libur yang akan ditampilkan
            </div>
          </div>

          <div class="form-group">
            <label>
              Tanggal<span class="required">*</span>
            </label>
            <input
              type="date"
              name="date"
              value="{{ holiday ? holiday.date.toISOString().split('T')[0] : '' }}"
              required
            />
            <div class="help-text">
              Tanggal hari libur
            </div>
          </div>

          <div class="form-group">
            <label>
              Tipe<span class="required">*</span>
            </label>
            <select name="type" required>
              <option value="national" {{ holiday && holiday.type === 'national' ? 'selected' : '' }}>
                Nasional
              </option>
              <option value="religious" {{ holiday && holiday.type === 'religious' ? 'selected' : '' }}>
                Keagamaan
              </option>
              <option value="company" {{ holiday && holiday.type === 'company' ? 'selected' : '' }}>
                Perusahaan
              </option>
              <option value="other" {{ holiday && holiday.type === 'other' ? 'selected' : '' }}>
                Lainnya
              </option>
            </select>
            <div class="help-text">
              Kategori hari libur
            </div>
          </div>

          <div class="form-group">
            <label>
              <div class="checkbox-group">
                <input
                  type="checkbox"
                  name="is_recurring"
                  value="true"
                  {{ holiday && holiday.is_recurring ? 'checked' : '' }}
                />
                <span>Hari libur berulang setiap tahun</span>
              </div>
            </label>
            <div class="help-text">
              Centang jika hari libur ini berulang setiap tahun (contoh: Tahun Baru)
            </div>
          </div>

          <div class="form-group">
            <label>
              Deskripsi
            </label>
            <textarea name="description" placeholder="Tambahkan keterangan tambahan (opsional)">{{ holiday ? holiday.description : '' }}</textarea>
            <div class="help-text">
              Keterangan tambahan tentang hari libur (opsional)
            </div>
          </div>

          <div class="form-actions">
            <button type="submit" class="btn btn-primary">
              {{ action === 'create' ? 'Simpan' : 'Perbarui' }}
            </button>
            <a href="/holidays" class="btn btn-secondary">Batal</a>
          </div>
        </form>
      </div>
    </div>
  </body>
